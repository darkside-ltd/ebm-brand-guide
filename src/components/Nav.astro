---
const { prevPost, nextPost } = Astro.props;
const nextPostSlug = '/' + nextPost?.data?.url
---

{ nextPostSlug && (<div class="bg-3 footer-nav">
	<div class="content-width content-align">
		<span class="next">Next</span>
		<div class="grid lg:grid-cols-2 gap-6 mt-1 lg:mt-1">
			{ nextPostSlug && (<a href={nextPostSlug}>{nextPost?.data?.title}</a>) }
		</div>
	</div>
</div>) }

<style lang="scss">
	.footer-nav{
		margin-top:auto;
		padding-top:32px;
		padding-bottom:40px;

		@media(min-width:420px){
			padding-top:60px;
			padding-bottom:100px;
		}
		.next {
			font-size: 1rem;
			font-weight: 100;
		}
		a{
			font-size:1.6rem;
			@media(min-width:420px){
				font-size:2rem;
			}
			text-decoration: underline;
		}
	}
	
</style>